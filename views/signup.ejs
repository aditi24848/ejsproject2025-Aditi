<%- include('./base/header.ejs') %>

    <body class="bg-secondary">
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="row bg-light shadow rounded overflow-hidden" style="width: 500px;">

                <div class="p-5">
                    <h3 class="text-center mb-4">Register</h3>
                    <form action="/add/user" method="post">
                        <div class="mb-3">
                            <label class="form-label">First Name:</label>
                            <input type="text" class="form-control" name="firstName"
                                placeholder="Enter your first name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Name:</label>
                            <input type="text" class="form-control" name="lastName" placeholder="Enter your last name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input type="text" class="form-control" name="email" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password:</label>
                            <input type="password" class="form-control" name="password"
                                placeholder="Enter your password">
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                I accept the <a href="#" class="text-decoration-none"><span class="text-success">Terms
                                        of Use</span></a> & <a href="" class="text-decoration-none"><span
                                        class="text-success">Privacy Policy</span></a>
                            </label>
                        </div>

                        <input type="submit" value="Sign In" class="btn btn-primary w-100 mb-3">
                        <p class="text-center">Already have an account?</p>
                        <a href="/" class="btn btn-outline-danger w-100">Log In</a>
                    </form>
                </div>

            </div>
        </div>
    </body>
    <%- include('./base/footer.ejs') %>
       